<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views.category="clr-namespace:ShoppingApp.Wpf.Views.CategoryViews"
                    xmlns:views.product="clr-namespace:ShoppingApp.Wpf.Views.ProductViews"
                    xmlns:viewmodels.category="clr-namespace:ShoppingApp.Wpf.ViewModels.CategoryViewModels"
                    xmlns:viewmodels.product="clr-namespace:ShoppingApp.Wpf.ViewModels.ProductViewModels">

    <DataTemplate DataType="{x:Type viewmodels.category:CategoryOverviewViewModel}">
        <views.category:CategoryOverviewView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels.category:CreateCategoryViewModel}">
        <views.category:CreateCategoryView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels.category:UpdateCategoryViewModel}">
        <views.category:UpdateCategoryView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels.product:ProductOverviewViewModel }">
        <views.product:ProductOverviewView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels.product:CreateProductViewModel}">
        <views.product:CreateProductView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels.product:UpdateProductViewModel}">
        <views.product:UpdateProductView/>
    </DataTemplate>

</ResourceDictionary>
   